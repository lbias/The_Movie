<div class="col-md-12">

<div class="group">
  <%= link_to("Write a Review", new_group_post_path(@group), class: "btn btn-default pull-right")%>
  <% if current_user && current_user == @group.user %>
    <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
  <% end %>
</div>

<h2><%= @group.title %></h2>
<p><%= @group.description %></p>
</div>

  <table class="table">
    <thead>
     <tr>
        <th>Review</th>
        <th>Author</th>
        <th>Publish Time</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

    <div class="text-center">
      <%= will_paginate @posts %>
    </div>
